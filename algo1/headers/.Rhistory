def_cdf_inv = function(cdf,...){
f = function(x,p,...){
cdf(x,...)-p
}
f_root = function(p,...){
uniroot(f, interval = c(-1,1)*1e3, p=p,..., extendInt = "upX", tol=.Machine$double.eps^0.5,maxiter=1e4)$root
}
return(f_root)
}
inverse_sampling = function(n,cdf,cdf_inv,...){
if(missing(cdf_inv)){
warn("cdf_inv not supplied, numerical root finding utilized, this is inefficient")
cdf_inv = def_cdf_inv(cdf,...)
}
V_cdf_inv = Vectorize(cdf_inv, vectorize.args = names(formals(cdf_inv))[1])
return(V_cdf_inv(runif(n),...))
}
inverse_sampling(100,pnorm,qnorm,mean=100,sd=25)
